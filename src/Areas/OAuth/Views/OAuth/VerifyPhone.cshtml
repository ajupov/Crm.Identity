@model Crm.Identity.Areas.OAuth.ViewModels.VerifyPhone.VerifyPhoneViewModel
@{
    Layout = "../Shared/_Layout";
    ViewBag.Title = "Подтверждение телефона";
}

<form method="post" action="/oauth/verifyphone">
    <h2>Подтверждение телефона</h2>

    @if (Model.IsInvalidCode)
    {
        <p class="error">Неправильный код</p>
    }

    @Html.AntiForgeryToken()

    <input type="hidden" name="TokenId" value="@Model.TokenId"/>
    <input type="hidden" name="CallbackUri" value="@Model.CallbackUri"/>
    <input type="text" name="Code" required="required" placeholder="Код" autofocus="autofocus"/>
    <input type="submit" value="Подтвердить"/>
</form>